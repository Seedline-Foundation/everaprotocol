# Email Subscription Integration (Resend)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here
RESEND_AUDIENCE_ID=your_resend_audience_id_here

# Analytics Integration (Plausible)
# Your registered domain for Plausible Analytics
PLAUSIBLE_DOMAIN=evera.network

# Site Configuration
# Base URL for your production website (used for social sharing, canonical URLs)
NEXT_PUBLIC_SITE_URL=https://evera.network

# Community & Social Links
# Discord server invite URL
NEXT_PUBLIC_DISCORD_URL=https://discord.gg/seedline-foundation

# Twitter/X profile URL
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/EveraNetwork

# Telegram channel URL
NEXT_PUBLIC_TELEGRAM_URL=https://t.me/everanetwork

# GitHub organization URL
NEXT_PUBLIC_GITHUB_URL=https://github.com/Seedline-Foundation/everaprotocol

# Optional: Development Settings
# Set to 'true' to enable debug logging in development
# DEBUG_MODE=false

# Feature Toggles
NEXT_PUBLIC_PRESALE_ENABLED=false
NEXT_PUBLIC_PITCH_DECK_ENABLED=true
NEXT_PUBLIC_CAREERS_ENABLED=true

# Optional: Rate Limiting
# Maximum number of API requests per IP per hour
# RATE_LIMIT_MAX_REQUESTS=10
# RATE_LIMIT_WINDOW_MS=3600000

# Additional Configuration for Production
NEXT_PUBLIC_SITE_NAME=Evera Protocol
